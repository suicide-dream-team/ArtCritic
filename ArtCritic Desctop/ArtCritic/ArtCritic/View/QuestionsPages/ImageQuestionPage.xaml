<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtCritic.ImageQuestionPage"
             BackgroundImageSource="background_guess_picture.png">
    <StackLayout x:Name="ImageGame">
        <Label x:Name="QuestionLabel" Text="" HorizontalTextAlignment="Center" FontSize="40"></Label>
        <Grid 
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                 >
            <Image
                   x:Name="currentPicture"                         
                   Aspect="AspectFit"                    
                />
        </Grid>
        <Entry x:Name="UserAnswerEntry" Text="" Completed="AcceptAnswerImageClick"/>
        <Button x:Name="AcceptAnswerButton" Text="Ввести" Clicked="AcceptAnswerImageClick" />
        <Label x:Name="ScoreLabel" Text="0" HorizontalTextAlignment="Center" FontSize="40"></Label>
    </StackLayout>
</ContentPage>