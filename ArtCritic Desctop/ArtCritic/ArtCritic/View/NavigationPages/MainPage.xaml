<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtCritic.MainPage"
             BackgroundImageSource="background_menu.png"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ImageButton x:Name ="Game" Grid.Row="1" Source="button_play.png" Clicked ="GameClick" BackgroundColor="Transparent"></ImageButton>
        <ImageButton x:Name ="Help" Grid.Row = "2" Source="button_help.png" Clicked="HelpClick" BackgroundColor="Transparent"></ImageButton>
    </Grid>
</ContentPage>

