<Window x:Class="ArtCritic_Desctop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtCritic_Desctop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="G1" >
        <Grid x:Name="Main_menu">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button x:Name="Game" Content="Game" Grid.Column="1" Grid.Row="1" 
                    Click="Game_Click"></Button>
            
            <Button x:Name="Settings" Grid.Column="1" Grid.Row="3"
                    Click="Settings_Click"></Button>
            
            <Button x:Name="Satistyc" Grid.Column="1" Grid.Row="5" 
                    Click="Satistyc_Click"></Button>
            
            <Button x:Name="Exit" Grid.Column="1" Grid.Row="7" 
                    Click="Exit_Click"></Button>   
            
        </Grid>
        
        <Grid x:Name="Type_of_game" d:Visibility="Hidden">
        
            <Grid.ColumnDefinitions>
                
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        
            </Grid.ColumnDefinitions>
        
            <Grid.RowDefinitions>
                
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        
            </Grid.RowDefinitions>
            <Button d:Visibility="Hidden" Click="Exit_Click"/>
        </Grid>


    </Grid>

   
</Window>
